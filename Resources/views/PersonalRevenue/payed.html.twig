{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
	    <script type="text/javascript">
	    setTimeout(function() {
	    	  window.location.href = "{{ path('PersonalRevenueViewSlug',{ 'slug': entity.slug }) }}";
	    	}, 1000);
	    </script>
	    <h1>Personal revenue payed status changed: {{ entity.revenueNumber }} - {{ entity.title }}</h1>
	    <p>You will be returned to the personal revenue's page in 1 second...</p>
    {% else %}
		<h1>Unknown personal revenue</h1>
		<p>The specified personal revenue is not available.</p>
    {% endif %}
{% endblock %}