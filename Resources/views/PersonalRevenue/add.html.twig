{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
	    <h1>Add personal revenue</h1>
	    <form action="{{ path('PersonalRevenueAdd') }}" method="post" {{ form_enctype(form) }}>
	    	{{ form_widget(form) }}
	    	<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Clear" /><a href="{{ path('PersonalRevenueList') }}" class="button right delete">Cancel</a>
	    </form>
    {% elseif entity is defined %}
    	<script type="text/javascript">
    	setTimeout(function() {
    		  window.location.href = "{{ path('PersonalRevenueList') }}";
    		}, 3000);
    	</script>
    	<h1>Personal revenue added: {{ entity.title }}</h1>
    	<p>You will be returned to the personal revenue list in 3 seconds...</p>
    {% endif %}
{% endblock %}
