<script type="text/javascript"> 
	var chart;
	$(document).ready(function() {
		chart = new Highcharts.Chart({
			chart: {
				renderTo: 'revenueexpensesbyyeargraphs',
				defaultSeriesType: 'spline'
			},
			credits: {
				enabled: false
			},
			legend: {
				enabled: false
			},
			title: {
				text: 'Revenue for {{ year }}'
			},
			xAxis: {
				categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
			},
			yAxis: {
				title: {
					text: 'Revenue/Expenses (euro)'
				},
				plotLines: [{
					value: 0,
					width: 1,
					color: '#4a4a4a'
				}]
			},
			tooltip: {
				formatter: function() {
					return '<b>'+ this.series.name +'</b><br />' + this.x + ': ' + this.y +' euro';
				}
			},
			series: [{
				name: 'Revenue',
				data: [
					{% for month,value in outPerMonth %}
						{{ value }}{% if loop.last %}{% else %},{% endif %}
					{% endfor %}
				]
			},{
				name: 'Expenses',
				data: [
					{% for month,value in inPerMonth %}
						-{{ value }}{% if loop.last %}{% else %},{% endif %}
					{% endfor %}
				]
			},{
				name: 'Result',
				data: [
					{% for month,value in resultPerMonth %}
						{{ value }}{% if loop.last %}{% else %},{% endif %}
					{% endfor %}
				]
			}]
		});
		chart2 = new Highcharts.Chart({
			chart: {
				renderTo: 'revenuebyyeargraphs',
				plotBackgroundColor: null,
				plotBorderWidth: null,
				plotShadow: false
			},
			credits: {
				enabled: false
			},
			title: {
				text: 'Revenue per company and month'
			},
			tooltip: {
				formatter: function() {
					return '<b>'+ this.point.name +'</b>: '+ this.y +' euro';
				}
			},
			plotOptions: {
				pie: {
					allowPointSelect: true,
					cursor: 'pointer',
					dataLabels: {
						enabled: true,
						color: '#4a4a4a',
						connectorColor: '#4a4a4a',
						formatter: function() {
							return '<b>'+ this.point.name +'</b>';
						}
					}
				}
			},
			series: [{
				type: 'pie',
				name: 'Revenue per company',
				data: [
					{% for company,value in outPerCompany %}
						['{{ company }}', {{ value }}],
					{% endfor %}
				],
				center: [250,100],
				size: 175
			}, {
				type: 'pie',
				name: 'Revenue per month',
				data: [
					{% for month,value in outPerMonth %}
						{% if value != 0 %}
							['{{ month }}', {{ value }}],
						{% endif %}
					{% endfor %}
				],
				center: [650,100],
				size: 175
			}]
		});
		chart3 = new Highcharts.Chart({
			chart: {
				renderTo: 'expensesbyyeargraphs',
				plotBackgroundColor: null,
				plotBorderWidth: null,
				plotShadow: false
			},
			credits: {
				enabled: false
			},
			title: {
				text: 'Expenses per category and month'
			},
			tooltip: {
				formatter: function() {
					return '<b>'+ this.point.name +'</b>: '+ this.y +' euro';
				}
			},
			plotOptions: {
				pie: {
					allowPointSelect: true,
					cursor: 'pointer',
					dataLabels: {
						enabled: true,
						color: '#4a4a4a',
						connectorColor: '#4a4a4a',
						formatter: function() {
							return '<b>'+ this.point.name +'</b>';
						}
					}
				}
			},
			series: [{
				type: 'pie',
				name: 'Expenses per category',
				data: [
					{% for category,value in inPerCategory %}
						['{{ category }}', {{ value }}],
					{% endfor %}
				],
				center: [250,100],
				size: 175
			}, {
				type: 'pie',
				name: 'Expenses per month',
				data: [
					{% for month,value in inPerMonth %}
						{% if value != 0 %}
							['{{ month }}', {{ value }}],
						{% endif %}
					{% endfor %}
				],
				center: [650,100],
				size: 175
			}]
		});

		$('.show_hide').click(function(){
			if( $(this).next('.slidingDiv').hasClass('expanded') ) {
				$(this).next('.slidingDiv').slideUp(200);
				$(this).next('.slidingDiv').removeClass('expanded');
				$(this).next('.slidingDiv').addClass('closed');
				$(this).removeClass('expanded');
				$(this).addClass('closed');
				$(this).html('Show details');
			} else {
				$(this).next('.slidingDiv').slideDown(200);
				$(this).next('.slidingDiv').removeClass('closed');
				$(this).next('.slidingDiv').addClass('expanded');
				$(this).removeClass('closed');
				$(this).addClass('expanded');
				$(this).html('Hide details');
			}
		});
	});
</script>
<script type="text/javascript" src="{{ asset('bundles/dellaertdcim/_js/sorttable.js') }}"></script>
<h2>{{ year }} overview</h2>
<div id="revenueexpensesbyyeargraphs" style="width: 90%; height: 300px; margin: 0 auto;"></div>
<h2>Expenses in {{ year }} per category</h2>
<div id="expensesbyyeargraphs" style="width: 100%; height: 300px; margin: 0 auto;"></div>
<h4 class="show_hide closed" style="text-align: right">Show details</h4>
<div class="slidingDiv" style="display: none;">
	<table cellspacing="0" class="sortable">
		<thead>
			<tr>
				<th>Category</th>
				<th width="20%" class="textright">Amount (w/o VAT)</th>
			</tr>
		</thead>
		<tbody>
			{% for category,value in inPerCategory %}
				<tr>
					<td>{{ category }}</td>
					<td class="textright">{{ value }}</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<th class="textright"><b>Total</b></th>
				<th class="textright">{{ inTotal }}</th>
			</tr>
		</tfoot>
	</table>
</div>
<h2>Revenue in {{ year }}</h2>
<div id="revenuebyyeargraphs" style="width: 100%; height: 300px; margin: 0 auto;"></div>
<h4 class="show_hide closed" style="text-align: right">Show details</h4>
<div class="slidingDiv">
	<table cellspacing="0" class="sortable" style="display: none;">
		<thead>
			<tr>
				<th width="10%">Number</th>
				<th>Project</th>
				<th>Title</th>
				<th width="12%">Date</th>
				<th width="12%" class="textright">Amount (w/o VAT)</th>
			</tr>
		</thead>
		<tbody>
			{% for invoice in outInvoices %}
				<tr>
					<td><a href="{{ path('OutgoingInvoiceViewSlug', { 'slug': invoice.slug }) }}">{{ invoice.invoiceNumber }}</a></td>
					<td>{{ invoice.project.company.companyName }} - {{ invoice.project.title }}</td>
					<td>{{ invoice.title }}</td>
					<td>{{ invoice.date.format('Y-m-d') }}</td>
					<td class="textright">{{ invoice.totalWoVAT }}</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<th colspan="4" class="textright"><b>Total</b></th>
				<th class="textright">{{ outTotal }}</th>
			</tr>
		</tfoot>
	</table>
</div>
