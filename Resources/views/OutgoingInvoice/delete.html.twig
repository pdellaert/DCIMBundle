{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
    	<script type="text/javascript">
    	setTimeout(function() {
    		  window.location.href = "{{ app.session.get('return_url') }}";
    		}, 3000);
    	</script>
    	<h1>Outgoing invoice deleted: {{ entity.invoiceNumber }} - {{ entity.title }}</h1>
    	<p>You will be returned to the outgoing invoice list in 3 seconds...</p>
    {% else %}
		<h1>Unknown outgoing invoice</h1>
		<p>The specified outgoing invoice is not available.</p>
    {% endif %}
{% endblock %}
