{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
	    <script type="text/javascript">
	    setTimeout(function() {
	    	  window.location.href = "{{ path('OutgoingInvoiceViewSlug',{ 'slug': entity.slug }) }}";
	    	}, 3000);
	    </script>
	    <h1>Outgoing invoice downloaded: {{ entity.invoiceNumber }} - {{ entity.title }}</h1>
	    <p>You will be returned to the outgoing invoice's page in 3 seconds...</p>
    {% else %}
		<h1>Unknown outgoing invoice</h1>
		<p>The specified outgoing invoice is not available.</p>
    {% endif %}
{% endblock %}