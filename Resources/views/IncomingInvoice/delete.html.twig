{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
    	<script type="text/javascript">
    	setTimeout(function() {
    		  window.location.href = "{{ app.session.get('return_url') }}";
    		}, 3000);
    	</script>
    	<h1>Incoming invoice deleted: {{ entity.invoiceNumber }} - {{ entity.title }}</h1>
    	<p>You will be returned to the incoming invoice list in 3 seconds...</p>
    {% else %}
		<h1>Unknown incoming invoice</h1>
		<p>The specified incoming invoice is not available.</p>
    {% endif %}
{% endblock %}
