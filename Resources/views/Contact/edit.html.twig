{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
	    <h1>Edit contact: {{ entity.lastname }}, {{ entity.firstname }}</h1>
	    <form action="{{ path('ContactEdit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
	    	{{ form_widget(form) }}
	    	<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Reset" /><a href="{{ path('ContactViewSlug',{ 'slug': entity.slug }) }}" class="button right delete">Cancel</a>
	    </form>
    {% elseif entity is defined %}
    	<script type="text/javascript">
    	setTimeout(function() {
    		  window.location.href = "{{ path('ContactViewSlug',{ 'slug': entity.slug }) }}";
    		}, 3000);
    	</script>
    	<h1>Contact changed: {{ entity.lastname }}, {{ entity.firstname }}</h1>
    	<p>You will be returned to the contact's page in 3 seconds...</p>
    {% else %}
		<h1>Unknown contact</h1>
		<p>The specified contact is not available.</p>
    {% endif %}
{% endblock %}
