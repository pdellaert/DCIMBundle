{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
		<h1>Edit bank account: {{ entity.accountName }}</h1>
		<form action="{{ path('BankAccountEdit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
			{{ form_widget(form) }}
			<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Reset" /><a href="{{ path('BankAccountViewSlug',{ 'slug': entity.slug }) }}" class="button right delete">Cancel</a>
		</form>
	{% elseif entity is defined %}
		<script type="text/javascript">
		setTimeout(function() {
			  window.location.href = "{{ path('BankAccountViewSlug',{ 'slug': entity.slug }) }}";
			}, 3000);
		</script>
		<h1>Bank account changed: {{ entity.accountName }}</h1>
		<p>You will be returned to the bank account's page in 3 seconds...</p>
	{% else %}
		<h1>Unknown bank account</h1>
		<p>The specified bank account is not available.</p>
	{% endif %}
{% endblock %}
