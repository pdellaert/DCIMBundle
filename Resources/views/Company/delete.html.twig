{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
    	<script type="text/javascript">
    	setTimeout(function() {
    		  window.location.href = "{{ path('CompanyList') }}";
    		}, 3000);
    	</script>
    	<h1>Company deleted: {{ entity.companyName }}</h1>
    	<p>You will be returned to the company list in 3 seconds...</p>
    {% else %}
		<h1>Unknown company</h1>
		<p>The specified company is not available.</p>
    {% endif %}
{% endblock %}
