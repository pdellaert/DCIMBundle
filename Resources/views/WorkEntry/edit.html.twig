{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
	    <h1>Edit work entry: {{ entity.date.format('Y-m-d') }} - {{ entity.amount }}</h1>
	    <form action="{{ path('WorkEntryEdit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
	    	{{ form_widget(form) }}
	    	<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Reset" /><a href="{{ path('WorkEntryViewId',{ 'id': entity.id }) }}" class="button right delete">Cancel</a>
	    </form>
    {% elseif entity is defined %}
    	<script type="text/javascript">
    	setTimeout(function() {
    		  window.location.href = "{{ path('WorkEntryViewId',{ 'id': entity.id }) }}";
    		}, 3000);
    	</script>
    	<h1>Work entry changed: {{ entity.date.format('Y-m-d') }} - {{ entity.amount }}</h1>
    	<p>You will be returned to the work entries page in 3 seconds...</p>
    {% else %}
		<h1>Unknown work entry</h1>
		<p>The specified work entry is not available.</p>
    {% endif %}
{% endblock %}
