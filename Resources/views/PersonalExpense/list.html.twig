{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
    <div id="entitybuttons"><a href="{{ path('IncomingInvoiceAdd') }}" class="button add">Add</a></div>
    <h1>Incoming invoices</h1>
    <script type="text/javascript">
	    $(function() {
	    	$(".entitytable").flexigrid({
	        	url: '{{ path('IncomingInvoiceListData') }}',
	            dataType: 'json',
	            colModel : [
	                {display: 'Number', name : 'expenseNumber', width : 50, sortable : true, align: 'left'},
	                {display: 'Title', name : 'title', width : 300, sortable : true, align: 'left'},
	                {display: 'Category', name : 'category', width : 250, sortable : false, align: 'left'},
	                {display: 'Date', name : 'date', width : 160, sortable : true, align: 'left'}
	            ],
	            searchitems : [
	                {display: 'Number', name : 'invoiceNumber', isdefault: true},
	                {display: 'Title', name : 'title'}
	            ],
	            sortname: "invoiceNumber",
	            sortorder: "asc",
	            usepager: true,
	            useRp: true,
	            rp: 20,
	            showTableToggleBtn: false,
	            showToggleBtn: false,
	            resizable: false,
	            width: 808,
	            height: 'auto',
	            singleSelect: true
	        });
		});

	    $('.flexigrid tr[id*="row"]').live('click', function(){
	    	window.location = '{{ path('IncomingInvoiceList') }}' + $(this).attr('id').substr(3);
	    });
    </script>
    
    <table class="entitytable"></table> 
{% endblock %}
