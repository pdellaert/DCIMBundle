{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if entity is defined %}
	    <script type="text/javascript">
	    setTimeout(function() {
	    	  window.location.href = "{{ path('PersonalExpenseViewSlug',{ 'slug': entity.slug }) }}";
	    	}, 3000);
	    </script>
	    <h1>Personal expense downloaded: {{ entity.expenseNumber }} - {{ entity.title }}</h1>
	    <p>You will be returned to the personal expense's page in 3 seconds...</p>
    {% else %}
		<h1>Unknown personal expense</h1>
		<p>The specified personal expense is not available.</p>
    {% endif %}
{% endblock %}