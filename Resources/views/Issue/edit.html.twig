{% extends "DellaertDCIMBundle::layout.html.twig" %}

{% block content %}
	{% if form is defined %}
	    <h1>Edit Issue: {{ entity.title }}</h1>
	    <form action="{{ path('IssueEdit', { 'id': entity.id }) }}" method="post" {{ form_enctype(form) }}>
	    	{{ form_widget(form) }}
	    	<input class="button save left" type="submit" value="Save" /><input class="button middle" type="reset" value="Reset" /><a href="{{ path('IssueViewId',{ 'id': entity.id }) }}" class="button right delete">Cancel</a>
	    </form>
    {% elseif entity is defined %}
    	<script type="text/javascript">
    	setTimeout(function() {
    		  window.location.href = "{{ path('IssueViewId',{ 'id': entity.id }) }}";
    		}, 3000);
    	</script>
    	<h1>Issue changed: {{ entity.title }}</h1>
    	<p>You will be returned to the issues page in 3 seconds...</p>
    {% else %}
		<h1>Unknown issue</h1>
		<p>The specified issue is not available.</p>
    {% endif %}
{% endblock %}
